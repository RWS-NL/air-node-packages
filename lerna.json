{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "push": true
    },
    "version": {
      "conventionalCommits": true,
      "signGitCommit": true,
      "message": "chore(release): %s",
      "push": false
    },
    "create": {
      "homepage": "https://github.com/RWS-NL/air-node-packages",
      "license": "AGPL-3.0-or-later"
    }
  }
}
