{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --parallel --ignore local-components-test",
    "ci:build": "lerna run ci:build --parallel --ignore local-components-test",
    "lint": "eslint scripts/ packages/** --fix --ext js,ts,tsx",
    "test": "lerna run test --parallel",
    "test:web": "pushd packages/webcomponents && yarn test --watchAll -u && popd",
    "docs": "typedoc",
    "commit": "git-cz",
    "cz": "git-cz",
    "up": "yarn upgrade-interactive --latest",
    "docs:serve": "concurrently \"yarn serve docs/\" \"open-cli http://localhost:5000\"",
    "prepublishOnly": "yarn build",
    "scripts:runner": "ts-node -P tsconfig.eslint.json",
    "scripts:validateNoOnly": "yarn scripts:runner scripts/validateNoOnly",
    "scripts:duplicateESLintConfig": "yarn scripts:runner scripts/duplicateESLintConfig",
    "scripts:duplicateStylelintConfig": "yarn scripts:runner scripts/duplicateStylelintConfig",
    "scripts:yarnAfterPull": "yarn scripts:runner scripts/yarnAfterPull"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@favware/eslint-config": "^3.1.6",
    "@favware/ts-config": "^1.1.1",
    "@joseph184/rollup-plugin-node-builtins": "^2.1.4",
    "@material-ui/core": "^4.8.0",
    "@material-ui/icons": "^4.5.1",
    "@rollup/plugin-json": "^4.0.0",
    "@rollup/plugin-url": "^4.0.0",
    "@svgr/rollup": "^5.0.0",
    "@types/classnames": "^2.2.9",
    "@types/common-tags": "^1.8.0",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.24",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/js-yaml": "^3.12.1",
    "@types/jsonfile": "^5.0.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.orderby": "^4.6.6",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.12.21",
    "@types/node-fetch": "^2.5.4",
    "@types/puppeteer": "^2.0.0",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@types/yargs": "^13.0.3",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "chalk": "^3.0.0",
    "classnames": "^2.2.6",
    "concurrently": "^5.0.2",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^6.7.1",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-flowtype": "^4.5.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.0.5",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "esm": "^3.2.25",
    "execa": "^3.4.0",
    "fuse.js": "^3.4.6",
    "glob": "^7.1.6",
    "husky": "^3.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "jsonfile": "^5.0.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "lodash.debounce": "^4.0.8",
    "lodash.orderby": "^4.6.0",
    "node-sass": "^4.13.0",
    "open-cli": "^5.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.2.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.13",
    "rollup-plugin-banner": "^0.2.1",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-terser": "^5.1.3",
    "rollup-plugin-typescript2": "^0.25.2",
    "serve": "^11.2.0",
    "stylelint": "^12.0.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typedoc": "^0.15.5",
    "typedoc-plugin-lerna-packages": "^0.2.2",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^3.7.2",
    "utility-types": "^3.10.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn scripts:validateNoOnly && yarn lint-staged",
      "post-merge": "yarn scripts:yarnAfterPull"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "git add"
    ],
    "packages/eslint-config/src/index.ts": [
      "yarn scripts:duplicateESLintConfig",
      "git add"
    ],
    "packages/stylelint-config/src/index.ts": [
      "yarn scripts:duplicateStylelintConfig",
      "git add"
    ]
  },
  "resolutions": {
    "**/**/serialize-javascript": "^2.1.1"
  }
}
