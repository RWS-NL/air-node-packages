{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --parallel",
    "ci:build": "lerna run ci:build --parallel",
    "lint": "eslint scripts/ packages/** --fix --ext js,ts,tsx",
    "lint:parallel": "lerna run lint --parallel",
    "style": "prettier --config .prettierrc --write packages/**/*.{scss,tsx,ts,json}",
    "test": "lerna run test --parallel",
    "test:web": "pushd packages/webcomponents && yarn test --watchAll -u && popd",
    "docs": "typedoc",
    "commit": "git-cz",
    "cz": "git-cz",
    "up": "yarn upgrade-interactive --latest",
    "prepublishOnly": "yarn build",
    "scripts:runner": "ts-node -P tsconfig.eslint.json",
    "scripts:validateNoOnly": "yarn scripts:runner scripts/validateNoOnly",
    "scripts:duplicateESLintConfig": "yarn scripts:runner scripts/duplicateESLintConfig",
    "scripts:duplicateStylelintConfig": "yarn scripts:runner scripts/duplicateStylelintConfig",
    "scripts:yarnAfterPull": "yarn scripts:runner scripts/yarnAfterPull",
    "now.sh": "yarn ci:build && yarn docs && rm -rf packages scripts node_modules .git-authors"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@date-io/core": "^1.3.13",
    "@date-io/moment": "^1.3.13",
    "@favware/ts-config": "^2.0.0",
    "@material-ui/core": "4.9.13",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/pickers": "^3.2.9",
    "@types/common-tags": "^1.8.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.2.1",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/js-yaml": "^3.12.3",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.orderby": "^4.6.6",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^13.13.5",
    "@types/node-fetch": "^2.5.7",
    "@types/puppeteer": "^2.0.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/react-router-dom": "^5.1.5",
    "@types/yargs": "^15.0.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "chalk": "^4.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "execa": "^4.0.0",
    "fs-nextra": "^0.4.7",
    "fuse.js": "^3.4.6",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-circus": "^26.0.1",
    "jest-environment-puppeteer": "4.4.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.2",
    "lodash.debounce": "^4.0.8",
    "lodash.orderby": "^4.6.0",
    "moment": "^2.25.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prop-types": "15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "rimraf": "^3.0.0",
    "serve": "^11.3.0",
    "stylelint": "^13.3.3",
    "ts-jest": "^25.5.0",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "typedoc": "~0.16",
    "typedoc-plugin-lerna-packages": "^0.3.0",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^3.8.3",
    "utility-types": "^3.10.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@rws-air/commitizen-config"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn scripts:validateNoOnly && yarn lint-staged",
      "post-merge": "yarn scripts:yarnAfterPull"
    }
  },
  "commitlint": {
    "extends": [
      "@rws-air"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix --ext js,ts,tsx",
      "prettier --write"
    ],
    "packages/eslint-config/src/index.ts": [
      "yarn scripts:duplicateESLintConfig"
    ],
    "packages/stylelint-config/src/index.ts": [
      "yarn scripts:duplicateStylelintConfig"
    ]
  },
  "resolutions": {
    "acorn": "^6.4.1",
    "minimist": "^1.2.2",
    "kind-of": "^6.0.3"
  }
}
