{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --parallel --ignore local-components-test",
    "lint": "lerna run lint --parallel",
    "test": "lerna run test --parallel",
    "test:web": "pushd packages/webcomponents && yarn test:modules --watchAll -u && popd",
    "docs": "typedoc",
    "commit": "git-cz",
    "cz": "git-cz",
    "up": "yarn upgrade-interactive",
    "docs:serve": "concurrently \"yarn serve docs/\" \"open-cli http://localhost:5000\"",
    "prepublishOnly": "yarn build && yarn docs",
    "scripts:validateNoOnly": "babel-node scripts/validateNoOnly --extensions \".ts\"",
    "scripts:duplicateESLintConfig": "babel-node scripts/duplicateESLintConfig --extensions \".ts\"",
    "scripts:duplicateStylelintConfig": "babel-node scripts/duplicateStylelintConfig --extensions \".ts\"",
    "scripts:yarnAfterPull": "babel-node scripts/yarnAfterPull --extensions \".ts\""
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/register": "^7.6.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@favware/eslint-config": "3.0.5",
    "@joseph184/rollup-plugin-node-builtins": "^2.1.4",
    "@material-ui/core": "^4.4.3",
    "@material-ui/icons": "^4.4.3",
    "@svgr/rollup": "^4.3.3",
    "@types/classnames": "^2.2.9",
    "@types/common-tags": "^1.8.0",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.18",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/js-yaml": "^3.12.1",
    "@types/jsonfile": "^5.0.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "12.7.5",
    "@types/node-fetch": "^2.5.2",
    "@types/puppeteer": "^1.19.1",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/yargs": "^13.0.2",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "chalk": "^2.4.2",
    "classnames": "^2.2.6",
    "concurrently": "^4.1.2",
    "cross-env": "^6.0.0",
    "cz-conventional-changelog": "^3.0.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.4.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-flowtype": "^3.13.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "glob": "^7.1.4",
    "husky": "^3.0.5",
    "jsonfile": "^5.0.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.3.0",
    "lodash.debounce": "^4.0.8",
    "node-sass": "^4.12.0",
    "open-cli": "^5.0.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "^3.1.2",
    "replace": "^1.1.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.21.4",
    "rollup-plugin-banner": "^0.2.1",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-terser": "5.1.2",
    "rollup-plugin-typescript2": "^0.24.2",
    "rollup-plugin-url": "^2.2.2",
    "serve": "^11.1.0",
    "stylelint": "^11.0.0",
    "tslint": "^5.20.0",
    "typedoc": "^0.15.0",
    "typedoc-plugin-lerna-packages": "^0.2.1",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^3.6.3",
    "utility-types": "^3.7.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn scripts:validateNoOnly && yarn lint-staged",
      "post-merge": "yarn scripts:yarnAfterPull"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "git add"
    ],
    "packages/eslint-config/src/index.ts": [
      "yarn scripts:duplicateESLintConfig",
      "git add"
    ],
    "packages/stylelint-config/src/index.ts": [
      "yarn scripts:duplicateStylelintConfig",
      "git add"
    ]
  }
}
