{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --parallel --ignore local-components-test",
    "lint": "lerna run lint --parallel",
    "test": "lerna run test --parallel",
    "test:web": "pushd packages/webcomponents && yarn test --watchAll -u && popd",
    "docs": "typedoc",
    "commit": "git-cz",
    "cz": "git-cz",
    "up": "yarn upgrade-interactive",
    "docs:serve": "concurrently \"yarn serve docs/\" \"open-cli http://localhost:5000\"",
    "prepublishOnly": "yarn build && yarn docs",
    "scripts:runner": "node -r esm -r ts-node/register",
    "scripts:validateNoOnly": "yarn scripts:runner scripts/validateNoOnly",
    "scripts:duplicateESLintConfig": "yarn scripts:runner scripts/duplicateESLintConfig",
    "scripts:duplicateStylelintConfig": "yarn scripts:runner scripts/duplicateStylelintConfig",
    "scripts:yarnAfterPull": "yarn scripts:runner scripts/yarnAfterPull"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@favware/eslint-config": "^3.1.3",
    "@favware/ts-config": "^1.0.1",
    "@joseph184/rollup-plugin-node-builtins": "^2.1.4",
    "@material-ui/core": "^4.5.1",
    "@material-ui/icons": "^4.5.1",
    "@svgr/rollup": "^4.3.3",
    "@types/classnames": "^2.2.9",
    "@types/common-tags": "^1.8.0",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.19",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/js-yaml": "^3.12.1",
    "@types/jsonfile": "^5.0.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.11.1",
    "@types/node-fetch": "^2.5.2",
    "@types/puppeteer": "^1.20.2",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.2",
    "@types/yargs": "^13.0.3",
    "@typescript-eslint/eslint-plugin": "~2.5.0",
    "@typescript-eslint/parser": "~2.3.3",
    "chalk": "^2.4.2",
    "classnames": "^2.2.6",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.2",
    "eslint": "^6.5.1",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.19.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "esm": "^3.2.25",
    "execa": "^3.2.0",
    "glob": "^7.1.4",
    "husky": "^3.0.9",
    "jsonfile": "^5.0.0",
    "lerna": "~3.17.0",
    "lint-staged": "^9.4.2",
    "lodash.debounce": "^4.0.8",
    "node-sass": "^4.12.0",
    "open-cli": "^5.0.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-scripts": "^3.2.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.25.0",
    "rollup-plugin-banner": "^0.2.1",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript2": "^0.24.3",
    "rollup-plugin-url": "^3.0.0",
    "serve": "^11.2.0",
    "stylelint": "^11.1.1",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typedoc": "^0.15.0",
    "typedoc-plugin-lerna-packages": "^0.2.1",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^3.6.4",
    "utility-types": "^3.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn scripts:validateNoOnly && yarn lint-staged",
      "post-merge": "yarn scripts:yarnAfterPull"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "git add"
    ],
    "packages/eslint-config/src/index.ts": [
      "yarn scripts:duplicateESLintConfig",
      "git add"
    ],
    "packages/stylelint-config/src/index.ts": [
      "yarn scripts:duplicateStylelintConfig",
      "git add"
    ]
  }
}
