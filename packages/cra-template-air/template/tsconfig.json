{
  "extends": "@favware/ts-config",
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "baseUrl": "src",
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "react",
    "noErrorTruncation": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "incremental": false
  },
  "include": ["src", "src/**/*.json"]
}
