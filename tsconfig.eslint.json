{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true
  },
  "includes": [
    "**/src",
    "**/__tests__",
    "**/*.tsx",
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/bin",
    "**/out",
    "**/dist",
    "**/coverage"
  ]
}